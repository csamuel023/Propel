<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.christophersamuel.propel.Goal_short_long">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_above="@+id/bDone"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_toLeftOf="@+id/textView14"
            android:layout_toStartOf="@+id/textView14"
            android:text="Push-up:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="125dp" />

        <EditText
            android:id="@+id/push"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ems="10"
            android:hint="1000"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_alignBaseline="@+id/calories"
            android:layout_alignBottom="@+id/calories"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:text="Jumping Jack:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp" />

        <EditText
            android:id="@+id/jump"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/stepDay"
            android:layout_marginTop="31dp"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7"
            android:ems="10"
            android:hint="2000"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/lbs"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_toLeftOf="@+id/lbs"
            android:layout_toStartOf="@+id/lbs"
            android:text="Steps"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_orange_light"
        android:text="Enter Excercise(s)"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:text="Done"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="457dp" />

</RelativeLayout>
