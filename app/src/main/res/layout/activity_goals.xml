<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christophersamuel.propel.Goal_short_long">

    <Button
        android:id="@+id/bCreateGoal"
        android:layout_width="163dp"
        android:layout_height="82dp"
        android:layout_alignTop="@+id/bViewGoal"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="111dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Create Goal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bViewGoal"
        android:layout_width="163dp"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="111dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="49dp"
        android:background="@android:color/holo_green_light"
        android:text="View Goal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCreateGoal" />

    <Button
        android:id="@+id/benterExercises"
        android:layout_width="163dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="111dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="49dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Enter Excercises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewGoal" />

    <Button
        android:id="@+id/bDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="289dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="457dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

